<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">


    <TextView
        android:id="@+id/rally_intro_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/rally_intro_photo"
        app:layout_constraintTop_toTopOf="@+id/rally_intro_photo" />


    <ImageView
        android:id="@+id/rally_intro_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:scaleType="centerCrop"
        tools:src="@drawable/test_banner"
        app:layout_constraintBottom_toBottomOf="@+id/rally_intro_company"
        app:layout_constraintLeft_toRightOf="@+id/rally_intro_id"
        app:layout_constraintTop_toTopOf="@+id/rally_intro_nick" />

    <TextView
        android:id="@+id/rally_intro_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="包子"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toRightOf="@+id/rally_intro_photo" />

    <TextView
        android:id="@+id/rally_intro_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/circle_gold_0"
        android:padding="@dimen/dp_2"
        android:text="发起人"
        android:textColor="@color/gold_d9"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="@+id/rally_intro_nick"
        app:layout_constraintLeft_toRightOf="@+id/rally_intro_nick"
        app:layout_constraintTop_toTopOf="@+id/rally_intro_nick" />

    <TextView
        android:id="@+id/rally_intro_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="产品总监"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/rally_intro_flag"
        app:layout_constraintLeft_toRightOf="@+id/rally_intro_flag" />


    <TextView
        android:id="@+id/rally_intro_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="上海顶识信息科技"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/rally_intro_nick"
        app:layout_constraintTop_toBottomOf="@+id/rally_intro_nick" />


    <ImageView
        android:id="@+id/rally_intro_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/switch_card"
        app:layout_constraintBottom_toBottomOf="@id/rally_intro_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rally_intro_photo" />


    <TextView
        android:id="@+id/rally_intro_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#fbfbfb"
        android:padding="@dimen/dp_8"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rally_intro_photo"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:text="@string/testname" />

</android.support.constraint.ConstraintLayout>