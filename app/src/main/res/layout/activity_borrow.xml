<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dingshi.com.hibook.ui.MyBorrowActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <dingshi.com.hibook.view.SwitchViewPager
        android:id="@+id/borrow_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:focus_text_color="@color/gold_d8"
        app:normal_text_color="@color/black_999"
        app:text_size_switch="@dimen/sp_4" />

    <android.support.v4.view.ViewPager
        android:id="@+id/borrow_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/book_house_zxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/book_house"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
