<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/item_list_photo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/test_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_list_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:text="解忧杂货铺"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@id/item_list_photo"
        app:layout_constraintTop_toTopOf="@id/item_list_photo" />


    <TextView
        android:id="@+id/item_list_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/item_list_concern"
        app:layout_constraintLeft_toLeftOf="@id/item_list_book"
        app:layout_constraintTop_toBottomOf="@id/item_list_book" />

    <TextView
        android:id="@+id/item_list_concern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出版社"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/item_list_concern_time"
        app:layout_constraintLeft_toLeftOf="@id/item_list_book"
        app:layout_constraintTop_toBottomOf="@id/item_list_author" />

    <TextView
        android:id="@+id/item_list_concern_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="出版社时间"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_list_book" />

    <TextView
        android:id="@+id/item_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="可借"
        android:textColor="@color/blue_32"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>