<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dl_left"
    >
    <RelativeLayout
        android:id="@+id/relative_r"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#f6eddb"

        >
        <RelativeLayout
            android:id="@+id/relative_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/baitianbandibu"
            android:gravity="center_vertical"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/read_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_margin="10dp"
                android:onClick="onClick"
                />
            <ImageView
                android:id="@+id/read_reading_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/yiduren"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="120dp"
                android:onClick="onClick"
                    />
            <TextView
                android:layout_marginRight="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2000"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:id="@+id/read_img_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/gouwuche"
                android:onClick="onClick"
                />

            <TextView
                android:id="@+id/read_text_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                android:text="分享" />
        </RelativeLayout>
        <View
            android:layout_below="@+id/relative_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d3cece"
            />
        <RelativeLayout
            android:layout_below="@+id/relative_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            >
            <dingshi.com.hibook.read.main.TxtReaderView
                android:id="@+id/activity_hwtxtplay_readerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF6EDDB" />
            <View
                android:id="@+id/read_view_middle"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="#00000000"
                android:layout_centerInParent="true"
                android:onClick="onClick"
                ></View>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#2e2c2d"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xiexiangfa1"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="写下这一刻的"
                    android:textColorHint="#50ffffff"
                    android:textColor="#50ffffff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/read_bottom_jian"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="A-"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#50ffffff"
                        android:onClick="onClick"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="#50ffffff"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/read_bottom_jia"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="A+"
                        android:textSize="20dp"
                        android:textColor="#50ffffff"
                        android:gravity="center"
                        android:onClick="onClick"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"></LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_margin="10dp"

                >
                <ImageView
                    android:id="@+id/book_read_chapter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/zhangjieliebiao"
                    android:onClick="onClick"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/qiehuanmoshi"
                    android:onClick="onClick"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/zitidaxiao"
                    android:onClick="onClick"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/hwtxtreader_menu_style1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:onClick="onClick"
                        android:background="@color/hwtxtreader_styleclor1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/hwtxtreader_menu_style2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:onClick="onClick"
                        android:background="@color/hwtxtreader_styleclor2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/hwtxtreader_menu_style3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:onClick="onClick"
                        android:background="@color/hwtxtreader_styleclor3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/hwtxtreader_menu_style4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:onClick="onClick"
                        android:background="@color/hwtxtreader_styleclor4"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/hwtxtreader_menu_style5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:onClick="onClick"
                        android:background="@color/hwtxtreader_styleclor5"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="#FFF8EFDF"
        android:id="@+id/read_sidebar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/books"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="解忧杂货铺"
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="解忧杂货铺"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="解忧杂货铺"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="解忧杂货铺"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">
            <ListView
                android:id="@+id/lv_left_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DrawerLayout" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>