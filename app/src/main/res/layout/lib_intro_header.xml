<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="dingshi.com.hibook.ui.fragment.LibIntroFragment">

    <TextView
        android:id="@+id/lib_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_18" />


    <TextView
        android:id="@+id/lib_intro_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:id="@+id/lib_intro_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/lib_intro_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_14" />

</LinearLayout>