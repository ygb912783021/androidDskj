<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dingshi.com.hibook.ui.InviteActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:scaleType="centerCrop"
        android:src="@drawable/invite_banner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:lineSpacingExtra="9sp"
        android:text="邀请好友一起读书"
        android:textColor="#3f3f3f"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:lineSpacingExtra="9sp"
        android:text="输入朋友的邀请码，互得免费读书"
        android:textColor="#a5a5a5"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/invite_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/circle_gray"
        android:gravity="center"
        android:hint="输入朋友的邀请码"
        android:textColor="#a5a5a5"
        android:textColorHint="#878787"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/invite_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shap_gold"
        android:gravity="center"
        android:text="获得读书券"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:lineSpacingExtra="9sp"
        android:text="呼唤朋友一起免费读书"
        android:textColor="#3f3f3f"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/invite_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingExtra="9sp"
        android:text="请设置您的专属邀请码"
        android:textColor="#a5a5a5"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/invite_alter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingExtra="11sp"
        android:text="设置"
        android:textColor="#3273fe"
        android:textSize="13sp" />
</LinearLayout>
