<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dingshi.com.hibook.ui.MoneyBagActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/back_money_layout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/back_money_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="9.48"
                android:textColor="@color/gold_d9"
                android:textSize="@dimen/sp_36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="总金额(元)"
                android:textColor="@color/black_87"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/back_money_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/black_87"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_money_layout"
        tools:text="可退余额为充值余额" />


    <TextView
        android:id="@+id/back_money_cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shap_black_7"
        android:gravity="center"
        android:text="不退了"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_money_label" />

    <TextView
        android:id="@+id/back_money_ok"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/circle_gray_7"
        android:gravity="center"
        android:text="确认退余额"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_money_cancel" />

</android.support.constraint.ConstraintLayout>
