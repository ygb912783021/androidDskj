<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="dingshi.com.hibook.ui.fragment.CardInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/gray_a5"
            android:textSize="@dimen/sp_14"
            android:text="名片信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_15"
                android:text="性别" />

            <TextView
                android:id="@+id/card_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/gray_a5"
                android:textSize="@dimen/sp_15"
                tools:text="男" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_15"
                android:text="生日" />

            <TextView
                android:id="@+id/card_info_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/gray_a5"
                android:textSize="@dimen/sp_15"
                tools:text="1999年" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_15"
                android:text="地址" />

            <TextView
                android:id="@+id/card_info_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/gray_a5"
                android:textSize="@dimen/sp_15"
                tools:text="上海" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_15"
                android:text="学校" />

            <TextView
                android:id="@+id/card_info_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/gray_a5"
                android:textSize="@dimen/sp_15"
                tools:text="华东" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/black_90"
                android:textSize="@dimen/sp_15"
                android:text="邮箱" />

            <TextView
                android:id="@+id/card_info_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:lineSpacingExtra="9sp"
                android:textColor="@color/gray_a5"
                android:textSize="@dimen/sp_15"
                tools:text="123@qq.com" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/gray_a5"
            android:textSize="@dimen/sp_14"
            android:text="职业" />

        <TextView
            android:id="@+id/card_info_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_15"
            tools:text="股权融资" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/gray_a5"
            android:textSize="@dimen/sp_14"
            android:text="工作经历" />

        <TextView
            android:id="@+id/card_info_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_15"
            tools:text="股权融资" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/gray_a5"
            android:textSize="@dimen/sp_14"
            android:text="教育经历" />

        <TextView
            android:id="@+id/card_info_edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_15"
            tools:text="股权融资" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/gray_a5"
            android:textSize="@dimen/sp_14"
            android:text="个人介绍" />

        <TextView
            android:id="@+id/card_info_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_15"
            tools:text="股权融资" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>