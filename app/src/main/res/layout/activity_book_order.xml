<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dingshi.com.hibook.ui.BookOrderActivity">

    <dingshi.com.hibook.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_content="马上借书"
        app:have_back_img="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/book_order_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:cardElevation="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="4本图书 合计:4元"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_9"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="立即支付"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>


</LinearLayout>

