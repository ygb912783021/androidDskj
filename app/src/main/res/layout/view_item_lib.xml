<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@drawable/circle_gold_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_lib_photo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_15"
        android:src="@drawable/my_default_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_lib_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:text="璟薇集团图书会"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@+id/item_lib_join"
        app:layout_constraintLeft_toRightOf="@id/item_lib_photo"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_lib_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="28人加入"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_lib_nick"
        app:layout_constraintTop_toBottomOf="@id/item_lib_nick" />


    <TextView
        android:id="@+id/item_lib_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="10-27"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>