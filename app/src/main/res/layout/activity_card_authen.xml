<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dingshi.com.hibook.ui.card.CardAuthenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/card_authen_idcard1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:background="@drawable/dashed_gold">

            <ImageView
                android:id="@+id/card_authen_idcard_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_authen_idcard_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="上传身份证正面"
                android:textColor="@color/gold_d9"
                android:textSize="@dimen/dp_18" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_authen_idcard2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/dashed_gold">

            <ImageView
                android:id="@+id/card_authen_idcard_img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/card_authen_idcard_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="上传身份证背面"
                android:textColor="@color/gold_d9"
                android:textSize="@dimen/dp_18" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/card_authen"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="9sp"
            android:text="审核须知"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="6sp"
            android:text="@string/card_authen_notice"
            android:textColor="#909090"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lineSpacingExtra="9sp"
            android:text="常见不规则案例"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_15" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="6sp"
            android:text="@string/card_authen_rule"
            android:textColor="#909090"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/card_authen_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/shap_black_7"
            android:gravity="center"
            android:text="提交认证"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
