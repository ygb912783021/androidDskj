<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_5"
    android:paddingTop="@dimen/dp_10">


    <ImageView
        android:id="@+id/back_book_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_200"
        android:scaleType="fitXY"
        tools:src="@drawable/test_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/back_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:maxLength="6"
        android:text="故宫"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/back_book_img"
        app:layout_constraintTop_toBottomOf="@id/back_book_img" />


    <TextView
        android:id="@+id/back_book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="借阅时间 : 15天"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/back_book_img"
        app:layout_constraintTop_toTopOf="@id/back_book_img" />


    <TextView
        android:id="@+id/back_book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="借阅费用 : 3.5元"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/back_book_time"
        app:layout_constraintTop_toBottomOf="@id/back_book_time" />

    <TextView
        android:id="@+id/back_book_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/blue_32"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/back_book_time"
        app:layout_constraintTop_toBottomOf="@id/back_book_price" />


    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/back_book_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:background="@drawable/circle_black"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:text="立即还书"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/back_book_tip"
        app:layout_constraintTop_toBottomOf="@id/back_book_tip"
      />

    <TextView
        android:id="@+id/back_book_lengthen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/circle_black"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:text="延长时间"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/back_book_book"
        app:layout_constraintTop_toTopOf="@id/back_book_book" />
</android.support.constraint.ConstraintLayout>