<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/coupon_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/coupon_bg_2"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15">


        <TextView
            android:id="@+id/coupon_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1元优惠券"
            android:textColor="@color/black_3f"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coupon_details_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="书柜借书优惠券"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="@id/coupon_details_title"
            app:layout_constraintTop_toBottomOf="@id/coupon_details_title" />


        <TextView
            android:id="@+id/coupon_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="有效期 2017-7-30~2017-8-30"
            android:textColor="@color/black_90"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@id/coupon_details_title"
            app:layout_constraintTop_toBottomOf="@id/coupon_details_describe" />


        <ImageView
            android:id="@+id/coupon_details_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:src="@drawable/coupon_txt_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:text="不可以与其他优惠活动叠加使用，不可兑现。"
        android:textColor="#3f3f3f"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="使用须知"
        android:textColor="#909090"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_20"
        android:layout_weight="1"
        android:text="@string/user_content"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/coupon_details_submit"
        style="@style/submit_but"
        android:text="现在去使用" />
</LinearLayout>




