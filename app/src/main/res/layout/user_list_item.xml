<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_3">

    <ImageView

        android:id="@+id/user_list_item_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@drawable/test_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_5" />

    <TextView
        android:id="@+id/user_list_item_name"
        android:layout_width="143dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="包子不胖"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/user_list_item_photo"
        app:layout_constraintTop_toTopOf="@+id/user_list_item_photo" />

    <Button
        android:id="@+id/user_list_item_add"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="@dimen/dp_15"
        android:text="添加"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>