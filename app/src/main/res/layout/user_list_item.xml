<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_10">

    <dingshi.com.hibook.view.ZQImageViewRoundOval

        android:id="@+id/user_list_item_photo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@drawable/test_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/user_list_item_name"
        android:layout_width="143dp"
        android:layout_height="@dimen/dp_60"
        android:gravity="center"
        android:text="包子不胖"

        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/user_list_item_photo"
        app:layout_constraintTop_toTopOf="@+id/user_list_item_photo" />

    <TextView
        android:id="@+id/user_list_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   添加    "
        android:textSize="@dimen/dp_17"
        android:background="@drawable/shap_black"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>