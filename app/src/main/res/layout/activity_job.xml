<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="dingshi.com.hibook.ui.card.JobActivity">


    <LinearLayout
        android:id="@+id/job_start_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_label"
            android:text="开始时间" />

        <TextView
            android:id="@+id/job_start_time"
            style="@style/edit_content"
            android:text="请填写开始时间" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/job_end_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间" />

        <TextView
            android:id="@+id/job_end_time"
            style="@style/edit_content"
            android:text="请填写结束时间" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司" />

        <EditText
            android:id="@+id/job_company"
            style="@style/edit_content"
            android:hint="请填写" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_label"
            android:text="职位" />

        <EditText
            android:id="@+id/job_post"
            style="@style/edit_content"
            android:hint="请填写" />
    </LinearLayout>

    <TextView
        style="@style/text_label"
        android:text="说明" />

    <EditText
        android:id="@+id/job_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@null"
        android:gravity="left|top"
        android:hint="请填写说明"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/job_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shap_black_7"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />

</LinearLayout>

