<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="dingshi.com.hibook.ui.library.LibManagerActivity">


    <RelativeLayout
        android:id="@+id/lib_manager_tab1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lib_manager_tab3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lib_manager_persons"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/circle_gold_10"
            android:gravity="center"
            android:text="目录成员\n50人"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_books"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_75"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/circle_gold_10"
            android:gravity="center"
            android:text="藏书量\n400本"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_shares"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/circle_gold_10"
            android:gravity="center"
            android:text="已共享\n300本"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/lib_manager_tab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingExtra="10sp"
        android:text="基本设置"
        android:textColor="@color/gray_a5"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/lib_manager_tab2"
        app:layout_constraintTop_toBottomOf="@+id/lib_manager_tab1"
        tools:layout_editor_absoluteX="0dp" />


    <RelativeLayout
        android:id="@+id/lib_manager_tab2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lib_manager_tab4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lib_manager_tab3">

        <TextView
            android:id="@+id/lib_manager_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_query"
            android:gravity="center"
            android:text="查看图书馆"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_menu"
            android:gravity="center"
            android:text="图书馆名单"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_msg"
            android:gravity="center"
            android:text="相关资讯"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/lib_manager_tab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:lineSpacingExtra="10sp"
        android:text="目录工具"
        android:textColor="@color/gray_a5"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/lib_manager_tab5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lib_manager_tab2" />


    <RelativeLayout
        android:id="@+id/lib_manager_tab5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lib_manager_tab6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lib_manager_tab4">

        <TextView
            android:id="@+id/lib_manager_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_edit"
            android:gravity="center"
            android:text="编辑图书馆"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_set"
            android:gravity="center"
            android:text="设置报名表"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_msg"
            android:gravity="center"
            android:text="导出名单"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lib_manager_tab6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lib_manager_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lib_manager_tab5">

        <TextView
            android:id="@+id/lib_manager_zxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_zxing"
            android:gravity="center"
            android:text="生成二维码"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lib_manager_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_15"
            android:drawableTop="@drawable/lib_setting"
            android:gravity="center"
            android:text="高级设置"
            android:textColor="#3f3f3f"
            android:textSize="15sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/lib_manager_delete"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shap_black_7"
        android:gravity="center"
        android:text="删除图书馆"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lib_manager_tab6" />


</android.support.constraint.ConstraintLayout>
