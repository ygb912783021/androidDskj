<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="dingshi.com.hibook.ui.fragment.LibUserFragment">

    <EditText
        android:id="@+id/lib_user_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/circle_gold"
        android:drawableLeft="@drawable/lib_search"
        android:drawablePadding="@dimen/dp_10"
        android:hint="搜索成员"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/gold_d9"
        android:textSize="@dimen/sp_13" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/lib_user_smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lib_user_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
