<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="dingshi.com.hibook.ui.OrderDetailsActivity">


    <TextView
        android:id="@+id/order_details_order"
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="dasdasd"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <TextView
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_order" />


    <TextView
        android:id="@+id/order_details_id"
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="xx002"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_order" />


    <TextView
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书书柜编号"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_id" />

    <TextView
        android:id="@+id/order_details_info"
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="图书信息"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_id" />


    <ImageView
        android:id="@+id/order_details_img"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="centerCrop"
        tools:src="@drawable/test_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_info" />

    <TextView
        android:id="@+id/order_details_book"
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解忧杂货铺"
        android:textColor="@color/black_3f"
        app:layout_constraintBottom_toTopOf="@+id/order_details_concern"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_img" />


    <TextView
        android:id="@+id/order_details_concern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="作者"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/order_details_author"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_book" />

    <TextView
        android:id="@+id/order_details_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="出版社"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/order_details_concern_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_concern" />

    <TextView
        android:id="@+id/order_details_concern_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="出版社时间"
        android:textColor="@color/black_999"
        app:layout_constraintBottom_toBottomOf="@+id/order_details_img"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/order_details_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="xx002"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@+id/tv_text_view"
        app:layout_constraintTop_toBottomOf="@+id/order_details_img" />

    <TextView
        android:id="@+id/tv_text_view"
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_address" />


    <TextView
        android:id="@+id/order_details_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="每本书前10天佣金1块，10天后每天租金0.5元"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_address" />

    <TextView
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收费规则"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_rule" />


    <TextView
        android:id="@+id/order_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="20170817-20170827"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_rule" />


    <TextView
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="时间"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_time" />


    <TextView
        android:id="@+id/order_details_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="1元"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_time" />

    <TextView
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="费用"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_price" />

    <TextView
        android:id="@+id/order_details_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="微信"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_details_price" />

    <TextView
        style="@style/my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付方式"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_details_pay" />


    <TextView
        android:visibility="gone"
        android:id="@+id/order_details_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shap_black_7"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_8"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="合计: 1元"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/order_details_submit" />


    <View
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/gray_e"
        app:layout_constraintBottom_toTopOf="@+id/order_details_submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
