<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <ImageView
            android:id="@+id/shop_car_list_photo"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_120"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@drawable/test_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/shop_car_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/black_999"
                android:textSize="@dimen/sp_14"
                android:text="悲伤逆流成河" />

            <TextView
                android:id="@+id/shop_car_list_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/black_999"
                android:textSize="@dimen/sp_14"
                android:text="作者：刘建华" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shop_car_list_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/black_999"
                    android:textSize="@dimen/sp_14"
                    android:text="￥198.00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/black_999"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/shop_car_list_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:textSize="@dimen/sp_15"
                    android:text="x10" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">
        <TextView
            android:id="@+id/shop_car_list_buynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_90"
            android:text="购买数量" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <dingshi.com.hibook.view.QuantityView
            android:id="@+id/shop_car_list_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:quan_color="@color/red"
            app:quan_max="100"
            app:quan_min="1"
            app:quan_tip=""
            app:quan_width="@dimen/dp_25"/>
        <!--app:quan_width="@dimen/dp_25"-->
        <!--app:quan_tip="借阅期限 / 天"-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">
        <TextView
            android:id="@+id/shop_car_list_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_90"
            android:text="配送方式" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/shop_car_list_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="快递免邮/邮费：10元" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/shop_car_list_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_90"
            android:text="买家留言:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
        <EditText
            android:id="@+id/shop_car_list_buymsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="选填，填写内容已和卖家协商确认"
            android:text=""
            android:ellipsize="end"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>

</LinearLayout>
