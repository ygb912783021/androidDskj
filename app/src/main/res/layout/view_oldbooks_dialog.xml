<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_white"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/view_oldbook_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="添加图书信息"
        android:textSize="20dp"
        android:layout_margin="@dimen/dp_10"
        />
        <LinearLayout
            android:id="@+id/lin_oldbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/view_oldbook_title"
            >
            <TextView
                android:id="@+id/view_oldbook_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/dp_17"
                android:text="原价:" />
            <EditText
                android:id="@+id/view_oldbook_original_price_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:hint="￥请输入原价" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_oldbook_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/lin_oldbook"
        android:layout_margin="@dimen/dp_20"
        >
        <TextView
            android:id="@+id/view_oldbook_present_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="现价"
            android:textSize="@dimen/dp_17"
            />




        <EditText
            android:id="@+id/view_oldbook_present_price_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:hint="￥请输入现价" />
    </LinearLayout>


    <TextView
        android:layout_below="@+id/lin_oldbook_1"
        android:id="@+id/view_oldbook_logistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/charge_choose"
        android:drawablePadding="@dimen/dp_20"
        android:text="是否包邮" />

    <TextView
        android:layout_below="@+id/view_oldbook_logistics"
        android:id="@+id/view_oldbook_shelves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_gold"
        android:gravity="center"
        android:text="确定上架"

        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_20"

        />


</RelativeLayout>
