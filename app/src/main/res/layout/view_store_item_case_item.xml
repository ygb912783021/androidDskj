<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_250"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/circle_gold_10"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:padding="@dimen/dp_3">

    <ImageView
        android:id="@+id/item_case_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/book_case"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_case_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_13"
        android:text="徐汇区"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@id/item_case_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_case_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="交通大学西区全家便利店"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_13"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@id/item_case_name"
        app:layout_constraintTop_toBottomOf="@id/item_case_name" />

    <TextView
        android:id="@+id/item_case_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="0.1km"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_case_name"
        app:layout_constraintTop_toBottomOf="@id/item_case_address" />
</android.support.constraint.ConstraintLayout>