<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/money_details_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:text="订单号：12312313"
        android:textColor="@color/black_444"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/money_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_12"
        android:text="2017-12-26"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_13"

        app:layout_constraintBottom_toBottomOf="@id/money_details_order"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/money_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="岛上书店"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="@id/money_details_order"
        app:layout_constraintTop_toBottomOf="@id/money_details_order" />


    <TextView
        android:id="@+id/money_detail_borrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借书10天"
        android:textColor="@color/black_999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@id/money_details_order"
        app:layout_constraintTop_toTopOf="@+id/money_detail_price" />

    <TextView
        android:id="@+id/money_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_12"
        android:text="￥1元"
        android:textColor="@color/gold_d9"
        android:textSize="@dimen/sp_18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/money_detail_content" />


</android.support.constraint.ConstraintLayout>