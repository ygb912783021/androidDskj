<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:id="@+id/item_coupon_layout"
    android:background="@drawable/coupon_bg_1"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_15">


    <TextView
        android:id="@+id/item_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1元优惠券"
        android:textColor="@color/black_3f"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_coupon_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="书柜借书优惠券"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="@id/item_coupon_title"
        app:layout_constraintTop_toBottomOf="@id/item_coupon_title" />


    <TextView
        android:id="@+id/item_coupon_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="有效期 2017-7-30~2017-8-30"
        android:textColor="@color/black_90"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@id/item_coupon_title"
        app:layout_constraintTop_toBottomOf="@id/item_coupon_describe" />


    <ImageView
        android:id="@+id/item_coupon_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:src="@drawable/coupon_txt_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508" />
</android.support.constraint.ConstraintLayout>